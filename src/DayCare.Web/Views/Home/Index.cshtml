@model Guardian

<div class="section row">
    <div class="col s12 m9 left">
        <div class="l-main">
            <div class="page-header">
                <h5>Choose Your Child</h5>
            </div>
            <div class="page-description">
                Here are all of the children that you have access to in our system. Choose on of the children
                from the list below to see  what they've been up.
            </div>
            <div class="child-grid">
                <div class="row">
                    @foreach (var childInfo in Model.ChildrenInfo)
                    {

                        <div class="child-cell col s6 m3">
                            <a asp-controller="Home" asp-action="TimeLine" asp-route-id="@childInfo.ChildId">
                                <i class="material-icons dp48">perm_identity</i>
                                <span>@($"{childInfo.Child.FirstName} {childInfo.Child.LastName}")</span>
                            </a>
                        </div>

                    }
                </div>
            </div>
        </div>

    </div>
